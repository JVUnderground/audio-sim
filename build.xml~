<project>
    <javac includeantruntime="false" />  
    <target name="clean">
        <delete dir="bin"/>
    </target>

    <target name="compile">
        <mkdir dir="bin"/>
        <javac srcdir="src" destdir="bin"/>
    </target>

    <target name="jar">
        <mkdir dir="bin/jar"/>
        <jar destfile="bin/jar/Demo.jar" basedir="bin">
            <manifest>
                <attribute name="Main-Class" value="demo.Demo"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="bin/jar/Demo.jar" fork="true"/>
    </target>
</project>
